/* pages/components/m-article-list/index.wxss */
.article-list{
 display: flex;
 flex-direction: row;
 padding: 20rpx 30rpx;
 box-sizing: border-box;
 align-items: center;
}
.article-list .img-box{
   flex:0 0 120rpx;
   /* height: 120rpx; */
   background:#fff;
   
}
.article-list .img-box image{
  width: 128rpx;
  box-shadow: 2rpx 3rpx 4rpx rgba(209,214,200,1);
  max-height: 250rpx;
}
.article-list .m-body{
  flex:1 1 50%;
  margin-left: 30rpx;
}

.article-list .m-operation{
  flex:1 0 110rpx;
  word-wrap: none;
  white-space: nowrap;
}
.article-list .m-operation .m-price{
  background: rgba(79, 144, 246, 0.3);
  text-align: right;
  border-radius: 10rpx;
  text-align: center;
  margin-left: 20rpx;
}
