/* pages/prodetail/index.wxss */
.pro-detail .m-heander{
    display: flex;
    flex-direction: row;
    padding: 20rpx 30rpx;
}
.m-heander .img-box{
    width: 140rpx;
}
.m-heander .img-box image{
    width: 100%;
    height: 200rpx;
}
.m-heander .m-body{
    margin-left: 20rpx;
}

.m-heander .m-author{
   /* margin-top: 8rpx; */
   display: flex;
   flex-direction: row; 
   align-items: center;
   padding: 10rpx 0;
}
.m-heander .m-author image{
    border-radius: 100%;
    align-items: center;
    border:1rpx solid #eee;
}
.m-heander .m-author .m-text{
    margin-left: 20rpx;
}
.operation-bar{
    padding:20rpx 30rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.operation-bar .button{
    box-sizing: border-box;
}
.operation-bar .tryread{
    flex:0 0 180rpx;
    /* width: 200rpx; */
}
.operation-bar .gobuy{
    flex:1;
    margin-left: 20rpx;
}
.swiper-tab{
    width: 100%;
    /* border-bottom: 2rpx solid #ccc; */
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
}
.swiper-tab-item{
    /* width: 30%;  */
    flex: 1;
    color:#434343;
}
.active{
    color:#3282f6;
    border-bottom: 4rpx solid #3282f6;
}
.swiper{
  text-align: center;
}
.tab-content{
    padding: 30rpx;
}